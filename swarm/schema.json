{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Omni Bus Message",
  "type": "object",
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "integer" },
    "sender": { "type": "string" },
    "recipient": { "type": "string" },
    "type": { "type": "string", "enum": ["instruction", "artifact", "query", "error"] },
    "payload": {
      "type": "object",
      "properties": {
        "task": { "type": "string" },
        "content": { "type": "string" },
        "path": { "type": "string" }
      }
    }
  },
  "required": ["id", "timestamp", "sender", "recipient", "type", "payload"]
}